  <h2><%= @architect.fullname %></h2>

  <%= image_tag "https://img.freepik.com/photos-gratuite/avatar-androgyne-personne-queer-non-binaire_23-2151100226.jpg", style:"width: 10rem; border-radius: 50%;"%>

  <h2>Spécialités</h2>
  <ul>
    <% @architect.specializations.each do |specialization| %>
      <li><%= specialization.name %></li>
    <% end %>
  </ul>

  <h2>Ville: </h2>
  <% if @architect.user %>
    <p><%= @architect.user.city.name %> (<%= @architect.user.city.zip_code %>)</p>
    <p>Département: <%= @architect.user.city.department %></p>
  <% else %>
    <p>Aucune ville renseignée</p>
  <% end %>

  <h2>Diplomes</h2>
  <% if @architect.degree_name.present? %>
    <div class="degrees-info">
      <% if @architect.degree_name.include?("|") %>
        <% degree_names = @architect.degree_name.split(" | ") %>
        <% degree_acronyms = @architect.degree_acronym.split(" | ") %>
        <ul>
          <% degree_names.each_with_index do |name, index| %>
            <li><%= name %> (<%= degree_acronyms[index] %>)</li>
          <% end %>
        </ul>
        <p><em>Nombre de diplômes: <%= degree_names.size %></em></p>
        <p><em>Années d'études moyennes: <%= calculate_average_study_years(@architect) %> ans</em></p>
      <% else %>
        <ul>
          <li><%= @architect.degree_name %> (<%= @architect.degree_acronym %>)</li>
        </ul>
        <p><em>Années d'études: <%= calculate_average_study_years(@architect) %> ans</em></p>
      <% end %>
    </div>
  <% else %>
    <p>Aucun diplôme renseigné</p>
  <% end %>
