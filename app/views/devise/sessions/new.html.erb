<div class="container mt-5 mb-5">

  <h1 class="mt-100 mb-100">Connexion</h1>

  <div class="card position-relative m-5 p-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="m-5">
        <div class="field">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="m-5">
        <div class="field">
          <%= f.label :Mot_de_passe %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
        <% end %>

        <div class="mt-3">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex flex-column align-items-center">
        <div class="actions">
          <%= f.submit "Se connecter", class:"btn btn-primary" %>
        </div>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "S'inscrire", new_registration_path(resource_name) %><br />
        <% end %>
      </div>
    <% end %>

    
  </div>
</div>